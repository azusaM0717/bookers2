<div class="container">
  <div class="row">
  <div class="col-lg-3">
  <%= render 'info', books: @books %>
  </div>
  <div class="col-lg-8 offset-md-1">
    <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to image_tag(book.user.get_image(100,100)), user_path(book.user.id) %></td>
          <td><%= book.opinion %></td>
          <td><%= book.title %><%= link_to "Show", book_path(book.id) %></td>
        </tr>  
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>

