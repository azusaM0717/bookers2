<%= render 'info', books: @books %>

<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
<tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to image_tag book.user.get_profile_image(100,100) %></td>
    <td><%= book.title %><%= link_to "Show", book_path(book.id) %></td>
    <td><%= book.opinion %></td>
  </tr>  
  <% end %>
</tbody>
</table>
