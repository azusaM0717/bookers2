<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
  <div class="col-lg-3">
  <%= render 'info', user: @user, book: @book %>
  </div>
  <div class="col-lg-8 offset-md-1">
  <h1>Book detail</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <br>
            <%= @book.user.name %></th>
          <% end %>
        <th scope="col"><%= link_to @book.title, book_path(@book.id) %>
        <th scope="col"><%= @book.opinion %>
        <th scope="col"><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success " if @book.user == current_user %>
        <th scope="col"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" if @book.user == current_user %>
      </tr>
    </thead>
  </table>  
</div>
</div>
</div>
