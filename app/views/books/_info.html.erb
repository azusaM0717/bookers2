<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
    <h3>name<%= @user.name %></h3><br>
    <h3>introduction<%= @user.instruction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "edit profile", edit_user_path(@user) %></p>
  <% end %>
  

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :opinion %>

    <%= f.submit 'Create Book' %>
<% end %>
