<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <p><label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>

  <p><label for="inputImage">Image</label>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %> </p>
  
  <p><label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%></p>
  <%= f.submit "Update User" %>
<% end %>