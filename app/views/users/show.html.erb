<div class="container">
  <div class="row">
  <div class="col-lg-4">
  <%= render 'books/info', books: @books %>
  </div>
  <div class="col-lg-8">
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
