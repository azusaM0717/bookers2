<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
    <%= render 'books/info', user: @user, book: @book %>
    </div>
  <div class="col-lg-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
      <th scope="row"><%= link_to image_tag @user.get_profile_image(100,100) %></th>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
