<div class="container">
  <div class="row">
  <div class="col-lg-3">
  <%= render 'books/info', user: @user, book: @book %>
  </div>
  <div class="col-lg-8 offset-md-1">
<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  </thead>
<tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user.id) %></td>
  </tr>  
  <% end %>
</tbody>
</table>
</div>
</div>
